@page "/counter"
@using BlogEngine.Configuration
@inject IConfigurationManager ConfigurationManager

<Title>Counter - @(ConfigurationManager.Configuration.GetValue<string>("Title"))</Title>

<div class="w3-card-4 w3-margin w3-white">
    <div class="w3-container">
        <h1>Counter</h1>

        <p>Current count: @currentCount</p>

        <button class="w3-button w3-border" @onclick="IncrementCount">Click me</button>
        <p></p>
    </div>
</div>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
